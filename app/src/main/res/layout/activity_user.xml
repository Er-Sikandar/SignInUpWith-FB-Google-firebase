<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        android:background="@color/purple_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
<TextView
    android:id="@+id/open_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:text="@string/need_services"
    android:textSize="18sp"
    android:padding="20dp"
    android:drawableRight="@drawable/ic_open"
    android:drawableLeft="@drawable/ic_base"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="110dp"
        android:background="@color/purple_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
   <!-- <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exp_list_view"
        android:layout_marginTop="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"/>
        -->

    <LinearLayout
        android:id="@+id/ll_cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
       android:visibility="gone">
    <TextView
        android:id="@+id/cat_ac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ac Split"
        android:textSize="18sp"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:drawableRight="@drawable/ic_open"
        android:drawableLeft="@drawable/ic_base"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/purple_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rec_first_cat"
            android:orientation="vertical"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/cat_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ac Window"
            android:textSize="18sp"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:drawableRight="@drawable/ic_open"
            android:drawableLeft="@drawable/ic_base"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/purple_700"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rec_second_cat"
            android:orientation="vertical"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/cat_freezer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Freezer"
            android:textSize="18sp"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:drawableRight="@drawable/ic_open"
            android:drawableLeft="@drawable/ic_base"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/purple_700"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rec_third_cat"
            android:orientation="vertical"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/cat_electric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Electrician"
            android:textSize="18sp"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:drawableRight="@drawable/ic_open"
            android:drawableLeft="@drawable/ic_base"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/purple_700"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rec_fourth_cat"
            android:orientation="vertical"
            android:visibility="gone"/>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>